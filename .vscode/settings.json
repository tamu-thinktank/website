{
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "tailwindCSS.experimental.classRegex": [
    // enable tailwind intellisense in cva() function
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  // Ensure VSCode uses pnpm instead of npm
  "npm.packageManager": "pnpm",
  // For those using file-nesting, nest the new files. E.g.:
  "explorer.fileNesting.patterns": {
    "package.json": "pnpm-workspace.yaml, pnpm-lock.yaml"
  },
  "markdown.copyFiles.destination": {
    "**/*": "${documentDirName}/static/"
  },
  "eslint.lintTask.enable": true, // > run task -> eslint -> lint whole folder
  "eslint.rules.customizations": [{ "rule": "*", "severity": "warn" }],
  "eslint.useFlatConfig": true,
  // show git status in editor
  "git.openRepositoryInParentFolders": "always"
}
